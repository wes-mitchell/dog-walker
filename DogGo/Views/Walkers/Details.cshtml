@model DogGo.Models.ViewModels.WalkerViewModel

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Walker Profile</h4>
    <hr />
    <div style="display:flex" class="container">
    <dl class="row">
        <dt class = "col-sm-10">
            <img style="height:100px; width:100px; float:left" class="bg-info" src="@Model.Walker.ImageUrl" alt="avatar" />
        </dt>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => Model.Walker.Name)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => Model.Walker.Name)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => Model.Walker.Neighborhood)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Walker.Neighborhood.Name)
        </dd>
    </dl>
    </div>
    <div>
        <table class="table">
            <thead>
                <tr>
                    <th>
                        <label>Walk Date</label>
                    </th>
                    <th>
                        <label>Client Name</label>
                    </th>
                    <th>
                        <label>Walk Duration</label>
                    </th>
                </tr>
            </thead>
    <tbody>
@foreach (var item in Model.Walks) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Date)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ClientName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Duration)
            </td>
        </tr>
}
    </tbody>
</table>
    </div>
</div>
<div>
